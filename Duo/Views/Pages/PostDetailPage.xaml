<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Duo.Views.Pages.PostDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Duo.Views.Pages"
    xmlns:components="using:Duo.Views.Components"
    xmlns:viewmodels="using:Duo.ViewModels"
    xmlns:models="using:Duo.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    HorizontalAlignment="Stretch">

    <Page.DataContext>
        <viewmodels:PostDetailViewModel x:Name="ViewModel"/>
    </Page.DataContext>

    <Grid HorizontalAlignment="Stretch" MaxWidth="900" Margin="16,0,32,0">
        <ScrollViewer 
            HorizontalAlignment="Stretch" 
            HorizontalContentAlignment="Stretch"
            VerticalScrollBarVisibility="Auto"
            Padding="0,0,16,0">
            <StackPanel 
                HorizontalAlignment="Stretch" 
                MaxWidth="900"
                Spacing="0">
                
                <!-- Back Button -->
                <Button 
                    x:Name="BackButton"
                    Content="Back"
                    Click="BackButton_Click"
                    Margin="0,16,0,16"/>
                
                <!-- Main Post Content with Hover Style Always Applied -->
                <components:Post 
                    x:Name="PostDetail"
                    Username="{x:Bind ViewModel.Post.Username, Mode=OneWay}"
                    Date="{x:Bind ViewModel.Post.Date, Mode=OneWay}"
                    Title="{x:Bind ViewModel.Post.Title, Mode=OneWay}"
                    Hashtags="{x:Bind ViewModel.Post.Hashtags, Mode=OneWay}"
                    Content="{x:Bind ViewModel.Post.Description, Mode=OneWay}"
                    LikeCount="{x:Bind ViewModel.Post.LikeCount, Mode=TwoWay}"
                    PostId="{x:Bind ViewModel.Post.Id, Mode=OneWay}"
                    IsAlwaysHighlighted="True"
                    HorizontalAlignment="Stretch"
                    Margin="0,0,0,16"/>

                <!-- Comment Input Area -->
                <components:CommentInput 
                    x:Name="CommentInputControl"
                    CommentSubmitted="CommentInputControl_CommentSubmitted"
                    HorizontalAlignment="Stretch" 
                    Margin="0,16,0,0"/>
                
                <!-- Comments Section Header -->
                <TextBlock 
                    Text="Comments" 
                    FontSize="18" 
                    FontWeight="SemiBold" 
                    Margin="0,16,0,8" 
                    HorizontalAlignment="Left"/>
                
                <!-- Comments List -->
                <StackPanel 
                    x:Name="CommentsPanel" 
                    HorizontalAlignment="Stretch" 
                    Spacing="0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
