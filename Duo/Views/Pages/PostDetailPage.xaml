<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Duo.Views.Pages.PostDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Duo.Views.Pages"
    xmlns:components="using:Duo.Views.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="16" MaxWidth="900" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" Grid.RowSpan="4" 
                    VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Disabled">
            <StackPanel Spacing="20" Padding="0,0,12,0">
                <Button x:Name="BackButton" Click="BackButton_Click" Margin="0,0,0,8">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE72B;" FontSize="12"/>
                        <TextBlock Text="Back" FontSize="14"/>
                    </StackPanel>
                </Button>

                <StackPanel Spacing="10">
                    <!-- Post Header -->
                    <Grid HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock x:Name="PostUsername"
                                 Grid.Column="0"
                                 FontWeight="SemiBold" 
                                 FontSize="14"
                                 Opacity="0.6"/>
                        
                        <TextBlock x:Name="PostDate"
                                 Grid.Column="1"
                                 FontSize="12" 
                                 FontWeight="SemiBold"
                                 Opacity="0.4"/>
                    </Grid>

                    <!-- Post Title -->
                    <TextBlock x:Name="PostTitle"
                             FontWeight="Bold"
                             FontSize="24"
                             TextWrapping="Wrap"
                             Margin="0,8,0,8"/>

                    <!-- Content -->
                    <TextBlock x:Name="PostContent"
                             TextWrapping="Wrap"
                             FontSize="16"
                             Margin="0,12,0,20"/>

                    <!-- Comments Section (Placeholder) -->
                    <TextBlock Text="Comments" 
                             FontWeight="SemiBold" 
                             FontSize="18"
                             Margin="0,16,0,8"/>

                    <!-- Comment List Placeholder -->
                    <Border Background="{ThemeResource SystemControlBackgroundListLowBrush}" 
                          CornerRadius="8" 
                          Padding="16"
                          Margin="0,0,0,24">
                        <TextBlock Text="Comments will appear here." 
                                 FontSize="14" 
                                 HorizontalAlignment="Center"
                                 Margin="0,24,0,24"
                                 Opacity="0.6"/>
                    </Border>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
