<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Duo.Views.Pages.PostListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Duo.Views.Pages"
    xmlns:components="using:Duo.Views.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <Style x:Key="HashtagButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{ThemeResource SystemControlBackgroundAccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter x:Name="ContentPresenter"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Content="{TemplateBinding Content}"
                                        ContentTransitions="{TemplateBinding ContentTransitions}"
                                        ContentTemplate="{TemplateBinding ContentTemplate}"
                                        Padding="{TemplateBinding Padding}"
                                        HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                        VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                        AutomationProperties.AccessibilityView="Raw"
                                        CornerRadius="{TemplateBinding CornerRadius}">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="PointerOver">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Background">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemAccentColorDark1}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="White"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Background">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemAccentColorDark2}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="White"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </ContentPresenter>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SelectedHashtagButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{ThemeResource SystemAccentColor}"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter x:Name="ContentPresenter"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Content="{TemplateBinding Content}"
                                        ContentTransitions="{TemplateBinding ContentTransitions}"
                                        ContentTemplate="{TemplateBinding ContentTemplate}"
                                        Padding="{TemplateBinding Padding}"
                                        HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                        VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                        AutomationProperties.AccessibilityView="Raw"
                                        CornerRadius="{TemplateBinding CornerRadius}">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="PointerOver">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Background">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemAccentColorLight1}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="Black"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Background">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemAccentColorLight2}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="Black"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </ContentPresenter>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Search -->
        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="Search by Title" 
                       Margin="0,0,0,4" 
                       FontWeight="SemiBold" />
            <TextBox 
                x:Name="FilterByTitle" 
                PlaceholderText="Enter title keywords..."
                TextChanged="OnFilterChanged"
                BorderThickness="0,0,0,1"
                Background="{ThemeResource SystemControlBackgroundAltHighBrush}"/>
        </StackPanel>
        
        <!-- Hashtags ScrollViewer -->
        <Grid Grid.Row="1" Margin="0,0,0,12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Text="Filter by Hashtags" 
                       Grid.Row="0" Grid.Column="0"
                       Margin="0,0,0,4" 
                       FontWeight="SemiBold"/>
                       
            <ScrollViewer Grid.Row="1" Grid.Column="0"
                Height="60"
                ZoomMode="Disabled"
                IsTabStop="True"
                IsVerticalScrollChainingEnabled="True"
                HorizontalScrollMode="Enabled" 
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollMode="Disabled" 
                VerticalScrollBarVisibility="Disabled"
                Background="{ThemeResource SystemControlBackgroundAltHighBrush}"
                BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                Padding="0,6">
                
                <!-- Hashtags container -->
                <ItemsControl x:Name="HashtagsContainer">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="8"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.Items>
                        <Button Content="#technology" Click="Hashtag_Click" Tag="technology" Style="{StaticResource HashtagButtonStyle}"/>
                        <Button Content="#design" Click="Hashtag_Click" Tag="design" Style="{StaticResource HashtagButtonStyle}"/>
                        <Button Content="#programming" Click="Hashtag_Click" Tag="programming" Style="{StaticResource HashtagButtonStyle}"/>
                        <Button Content="#news" Click="Hashtag_Click" Tag="news" Style="{StaticResource HashtagButtonStyle}"/>
                        <Button Content="#science" Click="Hashtag_Click" Tag="science" Style="{StaticResource HashtagButtonStyle}"/>
                        <Button Content="#art" Click="Hashtag_Click" Tag="art" Style="{StaticResource HashtagButtonStyle}"/>
                        <Button Content="#music" Click="Hashtag_Click" Tag="music" Style="{StaticResource HashtagButtonStyle}"/>
                        <Button Content="#health" Click="Hashtag_Click" Tag="health" Style="{StaticResource HashtagButtonStyle}"/>
                        <Button Content="#education" Click="Hashtag_Click" Tag="education" Style="{StaticResource HashtagButtonStyle}"/>
                        <Button Content="#travel" Click="Hashtag_Click" Tag="travel" Style="{StaticResource HashtagButtonStyle}"/>
                        <Button Content="#food" Click="Hashtag_Click" Tag="food" Style="{StaticResource HashtagButtonStyle}"/>
                        <Button Content="#sports" Click="Hashtag_Click" Tag="sports" Style="{StaticResource HashtagButtonStyle}"/>
                    </ItemsControl.Items>
                </ItemsControl>
            </ScrollViewer>
            
            <!-- Clear Hashtags Button -->
            <Button x:Name="ClearHashtagsButton"
                    Grid.Row="1" Grid.Column="1"
                    Content="Clear Hashtags"
                    FontSize="12"
                    Click="ClearHashtags_Click"
                    VerticalAlignment="Center"
                    Margin="12,0,0,0"
                    Padding="12,6"
                    Background="Transparent"
                    BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                    BorderThickness="1"
                    CornerRadius="4">
            </Button>
        </Grid>

        <!-- ListView for displaying filtered posts -->
    <ListView
        x:Name="FilteredListView"
        Grid.Row="2"
        ItemsSource="{x:Bind postsFiltered}"
        SelectionMode="Single"
        ShowsScrollingPlaceholders="True"
        BorderThickness="1"
        Margin="0,0,0,16"
        Padding="6"
        Background="{ThemeResource SystemControlBackgroundAltHighBrush}"
        CornerRadius="4">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:MockPost">
                    <StackPanel Margin="0,8,0,12" Padding="8">
                        <TextBlock Text="{x:Bind Title}" 
                                   FontWeight="SemiBold" 
                                   FontSize="16"/>
                        <TextBlock Text="{x:Bind Content}" 
                                   TextWrapping="Wrap" 
                                   Margin="0,4,0,0"
                                   Opacity="0.87"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Margin" Value="0,4"/>
                    <Setter Property="Padding" Value="6"/>
                    <Setter Property="Background" Value="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>

    <!-- Pagination control -->
    <PipsPager 
        x:Name="PostsPager"
        Grid.Row="3"
        HorizontalAlignment="Center"
        NumberOfPages="1"
        Orientation="Horizontal"
        PreviousButtonVisibility="Visible"
        NextButtonVisibility="Visible"
        SelectedPageIndex="0" />
</Grid>
</Page>
