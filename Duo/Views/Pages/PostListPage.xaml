<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Duo.Views.Pages.PostListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Duo.Views.Pages"
    xmlns:components="using:Duo.Views.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Filtering controls -->
        <StackPanel Grid.Row="0" Grid.Column="0" Width="200" Margin="12">
            <TextBlock Margin="8,8,8,4" Style="{ThemeResource BaseTextBlockStyle}">Filter by...</TextBlock>
            <TextBox 
                x:Name="FilterByTitle" 
                Width="150" 
                Header="Title" 
                Margin="8"
                HorizontalAlignment="Left" 
                TextChanged="OnFilterChanged" />
            <TextBox 
                x:Name="FilterByContent" 
                Width="150" 
                Header="Content" 
                Margin="8"
                HorizontalAlignment="Left" 
                TextChanged="OnFilterChanged" />
        </StackPanel>

        <!-- ListView for displaying filtered posts -->
        <ListView
            x:Name="FilteredListView"
            Grid.Row="0" Grid.RowSpan="2" Grid.Column="1"
            ItemsSource="{x:Bind postsFiltered}"
            SelectionMode="Single"
            ShowsScrollingPlaceholders="True"
            Margin="12"
            BorderThickness="1"
            BorderBrush="{ThemeResource SystemControlForegroundBaseMediumLowBrush}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:MockPost">
                    <StackPanel Margin="0,8">
                        <TextBlock Text="{x:Bind Title}" FontWeight="Bold"/>
                        <TextBlock Text="{x:Bind Content}" TextWrapping="Wrap"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Pagination control -->
        <PipsPager 
            x:Name="PostsPager"
            Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            Margin="0,8,0,12"
            NumberOfPages="5"
            Orientation="Horizontal"
            PreviousButtonVisibility="Visible"
            NextButtonVisibility="Visible" />
    </Grid>
</Page>
