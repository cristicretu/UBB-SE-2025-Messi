<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Duo.Views.Components.PostComponent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Duo.Views.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Border Background="White" 
            BorderBrush="#E0E0E0" 
            BorderThickness="1" 
            CornerRadius="8" 
            Padding="16" 
            Margin="0,0,0,12">
        <StackPanel Spacing="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="{x:Bind Username, Mode=OneWay}" 
                           Grid.Column="0"
                           FontWeight="SemiBold" 
                           Foreground="#333333"/>

                <TextBlock Text="{x:Bind Date, Mode=OneWay}" 
                           Grid.Column="1"
                           FontSize="12" 
                           Foreground="#888888" 
                           HorizontalAlignment="Right"/>
            </Grid>

            <TextBlock Text="{x:Bind Title, Mode=OneWay}" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       TextWrapping="Wrap"/>
                       
            <TextBlock Text="{x:Bind ContentText, Mode=OneWay}" 
                       TextWrapping="Wrap" 
                       Foreground="#555555"/>
        </StackPanel>
    </Border>
</UserControl> 