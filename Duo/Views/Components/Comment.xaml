<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Duo.Views.Components.Comment"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Duo.Views.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    HorizontalAlignment="Stretch"
    Margin="0,8,0,0">

    <StackPanel 
        HorizontalAlignment="Stretch" 
        Spacing="0">
        
        <!-- Main comment content -->
        <Grid HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Vertical line(s) based on tree level -->
            <ItemsRepeater 
                x:Name="LevelLinesRepeater" 
                Grid.Column="0" 
                HorizontalAlignment="Left">
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate>
                        <Border 
                            Width="1" 
                            Height="Auto" 
                            Margin="8,0,0,0"
                            VerticalAlignment="Stretch" 
                            Background="{ThemeResource SystemControlForegroundBaseLowBrush}" 
                            Opacity="0.5"/> 
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
                <ItemsRepeater.Layout>
                    <StackLayout Orientation="Horizontal" Spacing="0"/>
                </ItemsRepeater.Layout>
            </ItemsRepeater>
            
            <!-- Comment content -->
            <StackPanel 
                Grid.Column="1" 
                Padding="12" 
                Spacing="8" 
                HorizontalAlignment="Stretch">
                
                <!-- User info and date row -->
                <Grid HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock 
                        x:Name="UserTextBlock" 
                        Grid.Column="0"
                        Text="u/username" 
                        FontSize="12" 
                        FontWeight="SemiBold"/>
                    
                    <TextBlock 
                        x:Name="DateTextBlock" 
                        Grid.Column="1"
                        Text="Mar 14" 
                        FontSize="12" 
                        Opacity="0.7"/>
                </Grid>
                
                <!-- Comment description -->
                <TextBlock 
                    x:Name="DescriptionTextBlock" 
                    Text="This is a comment description." 
                    TextWrapping="Wrap" 
                    FontSize="14"/>
                
                <!-- Action buttons -->
                <StackPanel Orientation="Horizontal" Spacing="16">
                    <local:LikeButton x:Name="LikeButton"/>
                    <local:CommentButton x:Name="CommentReplyButton"/>
                </StackPanel>
                
                <local:CommentInput 
                    x:Name="ReplyInputControl"
                    CommentSubmitted="ReplyInput_CommentSubmitted"
                    Visibility="Collapsed"
                    Margin="0,8,0,0"/>
            </StackPanel>
        </Grid>
        
        <!-- Container for child comments - nested directly inside the comment -->
        <StackPanel 
            x:Name="ChildCommentsPanel" 
            HorizontalAlignment="Stretch"
            Margin="16,0,0,0"
            Spacing="0"/>
    </StackPanel>
</UserControl> 